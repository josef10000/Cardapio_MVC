@using CardapioMVC.Controllers
@model IEnumerable<ProdutoModel>

<style>
    .btn-container {
        display: flex;
        gap: 10px;
    }

        .btn-container button {
            width: 100px;
            height: 40px;
            border: none;
            border-radius: 5px;
            background-color: #007bff;
            color: #fff;
            cursor: pointer;
            transition: box-shadow 0.3s;
        }

            .btn-container button:hover {
                box-shadow: 0 0 10px #ffcc00;
            }

            .btn-container button:last-child {
                background-color: #28a745;
            }

    .btn-cadastrar,
    .btn-exportar {
        width: 100px;
        height: 100px;
        border-radius: 50%;
        background-color: #007bff;
        color: #fff;
        cursor: pointer;
        transition: box-shadow 0.3s;
        display: flex;
        align-items: center;
        justify-content: center;
        font-size: 16px;
        font-weight: bold;
    }

        .btn-cadastrar:hover,
        .btn-exportar:hover {
            box-shadow: 0 0 10px #ffcc00;
        }
</style>

<div class="container">
    <div class="d-flex justify-content-between align-items-center mb-5">
        <h1>Produtos</h1>
        <div class="btn-container">
            <a class="btn-cadastrar" asp-controller="Produto" asp-action="Cadastrar">Cadastrar</a>
            <a class="btn-exportar" asp-controller="Produto" asp-action="ExportarExcel">Exportar</a>
        </div>
    </div>

    <table class="table table-dark table-hover">
        <thead>
            <tr>
                <th scope="col">Produtos</th>
                <th scope="col">Preço</th>
                <th scope="col">Kilos</th>
                <th scope="col">Gramas</th>
                <th scope="col">Custo</th>
                <th></th>
            </tr>
        </thead>
        <tbody>
            @if (Model != null)
            {
                foreach (var produto in Model)
                {
                    <tr>
                        <th scope="row">@produto.Nome</th>
                        <td>@string.Format("R$ {0:0.00}", produto.Valor)</td>
                        <td>@string.Format("{0} kg", produto.Kilos)</td>
                        <td>
                            <input type="number" class="form-control" id="quantidadeGramas-@produto.Id" onchange="calcularCusto(@produto.Id)" />
                        </td>
                        <td>
                            <span id="custo-@produto.Id"></span>
                        </td>
                        <td>
                            <a asp-controller="Produto" asp-action="Editar" asp-route-id="@produto.Id" class="btn btn-warning mx-2">Editar</a>
                            <a asp-controller="Produto" asp-action="Excluir" asp-route-id="@produto.Id" class="btn btn-danger mx-2">Excluir</a>
                        </td>
                    </tr>
                }
            }
        </tbody>
    </table>
</div>

<script>
    
    }
</script>

