@using CardapioMVC.Controllers;
@model IEnumerable<ProdutoModel>




<div class+="container">

    <div class="d-flex justify-content-between align-itens-center  mb-5">
        <h1>Produtos</h1>
        <a class="btn btn-success mx-2" asp-controller="Produto" asp-action="Cadastrar">Cadastrar Produto</a>

    </div>

<table class="table table-dark table-hover">
    <thead>
        <tr>
            <th scope="col">Produtos</th>
            <th scope="col">Preço</th>
            <th scope="col">Kilos</th>
            <th></th>
           
        </tr>
    </thead>
    <tbody>


        @if (Model != null)
        {
            foreach (var produtos in Model)
            {
                <tr>
                    <th scope="row">@produtos.Nome</th>
                    <td>@produtos.Valor</td>
                    <td>@produtos.Kilos</td>
                    <td>
                        <a asp-controller="Produto" asp-action="Editar" asp-route-id="@produtos.Id" class="btn btn-warning mx-2">Editar</a>
                            <a asp-controller="Produto" asp-action="Excluir" asp-route-id="@produtos.Id" class="btn btn-danger mx-2">Excluir</a>

                    </td>

                </tr>
            }
        }




      
      
    </tbody>
</table>

</div>