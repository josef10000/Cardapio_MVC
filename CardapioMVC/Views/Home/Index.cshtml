@{
    ViewData["Title"] = "Home Page";
}

<style>
    .cardapio-container {
        position: relative;
        width: 400px;
        height: 300px;
        margin: 0 auto;
        background-color: #f8f8f8;
        border: 1px solid #ccc;
        border-radius: 5px;
        overflow: hidden;
    }

    .content {
        position: relative;
        z-index: 1;
        text-align: center;
        color: #333;
        padding: 20px;
    }

    h2 {
        font-size: 24px;
        margin-bottom: 20px;
    }

    .caneta-container {
        position: relative;
        width: 150px;
        height: 150px;
        margin: 0 auto;
        animation: escrever 2s linear infinite;
    }

    .caneta {
        position: absolute;
        top: 0;
        left: 50%;
        transform: translateX(-50%);
        width: 5px;
        height: 150px;
        background-color: #333;
        animation: moverCaneta 2s linear infinite;
    }

    keyframes escrever {
        0% {
            height: 0;
        }
        50% {
            height: 150px;
        }
        100% {
            height: 0;
        }
    }

    keyframes moverCaneta {
        0% {
            transform: translateX(-50%) translateY(0);
        }
        50% {
            transform: translateX(-50%) translateY(75px);
        }
        100% {
            transform: translateX(-50%) translateY(0);
        }
    }
</style>

<div class="text-center">
    <div class="cardapio-container">
        <div class="content">
            <h2>Cardápio</h2>
            <div class="caneta-container">
                <div class="caneta"></div>
            </div>
        </div>
    </div>
    <h1 class="display-4">Welcome</h1>
    <p>Learn about <a href="https://docs.microsoft.com/aspnet/core">building Web apps with ASP.NET Core</a>.</p>
</div>

<script>
    // Exemplo de código JavaScript para alterar o título do cardápio dinamicamente
    const cardapioTitulo = document.querySelector('.content h2');
    cardapioTitulo.textContent = 'Novo Cardápio';
</script>
