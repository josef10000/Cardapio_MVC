@model List<CardapioMVC.Models.CaloriasModel>

<
<!DOCTYPE html>
<html>
<head>
    <meta charset="utf-8" />
    <title>Calorias dos Alimentos</title>
    <style>
        .background-image {
            position: fixed;
            top: 0;
            left: 0;
            width: 100%;
            height: 100%;
            z-index: -1;
        }

            .background-image img {
                object-fit: cover;
                width: 100%;
                height: 100%;
            }

        .content {
            color: white;
        }
    </style>
</head>
<body>
    <div class="background-image">
        <img src="/images/fundo.calorias.jpg" />
    </div>

    <div class="content">
        <h1>Calorias dos Alimentos</h1>

        <form method="post" asp-action="ObterCalorias">
            <input type="text" name="descricao" placeholder="Digite o nome do produto">
            <button type="submit">Buscar</button>
        </form>

        @if (Model != null)
        {
            foreach (var alimento in Model)
            {
                <div>
                    <h3>@alimento.Descricao</h3>
                    <p>Quantidade: @alimento.Quantidade</p>
                    <p>Calorias: @alimento.Calorias</p>
                </div>
            }
        }
    </div>
</body>
</html>

</html>
